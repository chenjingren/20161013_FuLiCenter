<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvRefresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/now_refresh"
                android:textColor="#000"
                android:textSize="20sp"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/tv_null"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="购物车空空如也"
                android:textSize="20sp"
                android:textColor="#f0f"
                android:gravity="center"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

    <RelativeLayout
        android:id="@+id/layout_goods_price"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/btn_goods_charge"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:background="@color/main_orange"
            android:text="结算"
            android:textSize="20sp"
            android:textColor="#000"
            />
        <TextView
            android:id="@+id/tv_goods_all_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/btn_goods_charge"
            android:layout_marginRight="10dp"
            android:text="总结：￥1800.00"
            android:textSize="18sp"
            android:textColor="#000"
            />
        <TextView
            android:id="@+id/tv_goods_save_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_goods_all_price"
            android:layout_toLeftOf="@id/btn_goods_charge"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:text="节省：￥250.00"
            android:textSize="18sp"
            android:textColor="#000"
            />
    </RelativeLayout>
</RelativeLayout>